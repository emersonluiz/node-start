<% include ../header %>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">Edit Person</div>
            <div class="panel-body">
                <form method="post" action="/persons/save">
                    <input type="hidden" name="id" value="<%= person._id %>" />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Name</span>
                        <input type="text" class="form-control" placeholder="Name" aria-describedby="basic-addon1" name="name" value="<%= person.name %>" />
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon2">Email</span>
                        <input type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon2" name="email" value="<%= person.email %>" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Save</button>
                    <a class="btn btn-danger" href="/persons" role="button">Cancel</a>
                </form>
            </div>
        </div>
    </div>
<% include ../footer %>